package user;
import java.util.Scanner;
import dao.DatabaseQueries;
import service.OperationsWithMysql;
public class Start {
	public static int exitSign() {
    	System.out.println("If u want to continue press 0  , else any other key for going one step back");
		Scanner scanner=new Scanner(System.in);
		int sign=scanner.nextInt();
		
		return sign;
    }
	public static void main(String[] args) {
		int sign;
        OperationsWithMysql operationsWithMysql=new OperationsWithMysql();
    	DatabaseQueries databaseQueries = new DatabaseQueries();
  		Scanner scanner=new Scanner(System.in);
  		do {
			    System.out.println("############################################");
				System.out.println("||        Enter 1 for Add an entry        ||");
				System.out.println("||        Enter 2 for Read an entry       ||");
				System.out.println("||        Enter 3 view all entries        ||");
				System.out.println("||        Enter 4 for Update an entry     ||");
				System.out.println("||        Enter 5 for Delete an entry     ||");
				System.out.println("||        Enter 6 for exit                ||");
				System.out.println("############################################");
			  	int choice;
			  	sign=1;
		  	    //choice=scanner.nextInt();
	  		    System.out.println("Enter Your Choice");
			    try {   
					  	    choice=scanner.nextInt();
					  	    switch(choice)
						  	{
						  	    case 1:
						  	    	   operationsWithMysql.add(databaseQueries);
						  	    	   sign=exitSign();
						  		       break;
						  	    case 2:
						  	    	   operationsWithMysql.read(databaseQueries);
						  	    	   sign=exitSign();
						  	    	   break;
						  	    case 3:
						  	    	   operationsWithMysql.readall(databaseQueries);
						  	    	   sign=exitSign();
						  	    	   break;
						  	    case 4:
						  	    	   operationsWithMysql.update(databaseQueries);
						  	    	   sign=exitSign();
						  	    	   break;
						  	    case 5:
						  	    	   operationsWithMysql.delete(databaseQueries);
						  	    	   sign=exitSign();
						  	           break;
						  	    case 6:
						  	    	   sign=1;
						  	    	   break;
						        default:
						        	   System.out.println("Please Choose from above five options");
						        	   sign=0;
						               Thread.sleep(2000);
						  		       
						  	}
			   } catch(Exception exception) {
					      System.out.println("Error : Enter only integer ");
					  	  sign=0;	       
			     }
					  	
	      } while(sign==0);
          System.out.println("Your program has been successfully terminated..........");
          //operationsWithMysql.read();
          databaseQueries=null;
          System.gc();
	      operationsWithMysql.read(databaseQueries);
	}

}
